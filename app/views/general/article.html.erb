<div class="active_article">
  <p>
      <strong><%= @article.title %></strong>
    </p>
    <p>
      <%= @article.content %>
    </p>
    <% unless current_user.nil? %>
      <h3>Komentēt:</h3>
      <%= form_for @comment, :remote => true, url: comments_create_path do |f| %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :acticle_id, :value => @article.id%>
        <p>
          <%= f.label :content %><br>
          <%= f.text_area :content %>
        </p>
        <p>
          <%= f.submit %>
        </p>
      <% end %>
    <% end %>
    <div id="all_comments">
      <% @article.real_comments.each do |comment| %>
        <%= render 'one_top_comment', :comment => comment %>
      <% end %>
  </div>
  <%= link_to 'Atpakaļ', root_path %> 
</div>

        
        


